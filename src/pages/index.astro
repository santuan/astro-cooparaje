---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import PageFindSearch from "../components/PageFind/PageFindSearch.astro";
import BlogList from "../components/PageFind/List.astro";
import AllTags from "@/components/AllTags.astro";
const allResourses = await getCollection("recursos");
---

<Layout title="Buscar videos">
  <div class="relative z-20 max-w-4xl pt-20 mx-auto lg:pt-32 pb-6">
    <h1 class="px-6 mb-4 font-serif text-4xl md:text-6xl font-light text-left">
      Buscar recursos
    </h1>
    <h2 class="px-6 mb-2 font-serif text-lg md:text-xl font-light text-left">
      Escriba en el buscador y aguarde a que aparezcan los resultados
      aproximados.
    </h2>
    <PageFindSearch />
    <BlogList posts={allResourses} />
  </div>
  <AllTags/>
</Layout>
