---
import Layout from "@/layouts/Layout.astro";
import Card from "@/components/Card.astro";
import { getCollection } from "astro:content";
const allResourses = await getCollection("recursos");
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col gap-6 py-24">
    <h1 class="mt-24 mb-6 font-serif text-6xl text-center">Todos los recursos</h1>
    <div
      role="list"
      class="grid gap-6 px-4 mx-auto lg:grid-cols-3 md:grid-cols-2"
    >
      {
        allResourses.map((item) => (
          <Card
            title={item.data.title}
            slug={item.slug}
            image={item.data.featuredImg}
            url={item.data.url}
            text={item.body}
          />
        ))
      }
    </div>
  </main>
</Layout>
