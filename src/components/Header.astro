---
import Logo from "@/components/Logo.astro";
import Navigation from "@/components/Navigation.astro";
---

<header>
  <Logo />
  <div class="appNav">
    <Navigation />
  </div>
</header>

<style>
  header {
    @apply fixed p-3 left-0 right-0 top-0 bg-stone-900/80 backdrop-contrast-200 flex items-center justify-between backdrop-blur-md z-50;
  }

  header nav {
    @apply !hidden md:flex;
  }

  .appNav {
    @apply hidden md:flex;
  }
</style>
