---
const pathname = new URL(Astro.request.url).pathname;
---

<nav aria-label="Top">
  <a class={pathname === "/" ? "active" : ""} rel="prefetch" href="/">Buscar</a>
  <a
    class={pathname === "/colecciones"
      ? "active"
      : "" || pathname.includes("/colecciones")
      ? "active"
      : ""}
    rel="prefetch"
    href="/colecciones"
  >
    Colecciones
  </a>
  <a
    class={pathname === "/recursos"
      ? "active"
      : "" || pathname.includes("/recursos")
      ? "active"
      : ""}
    rel="prefetch"
    href="/recursos"
  >
    Recursos
  </a>
</nav>

<style>
  nav {
    @apply px-4 gap-6 flex justify-end items-center;
  }

  nav a {
    @apply text-lg text-right w-full hover:text-amber-500 duration-300 font-bold text-white font-mono;
  }

  nav a.active {
    @apply text-amber-300 hover:text-amber-500;
  }
</style>
